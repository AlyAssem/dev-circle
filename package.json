{
  "name": "dev-circle",
  "version": "1.0.0",
  "description": "community app",
  "main": "server.ts",
  "nodemonConfig": {
    "ignore": [
      "/backend/data/*.json",
      "/frontend"
    ]
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon --exec ts-node backend/server.ts",
    "client": "yarn --cwd ./frontend start"
  },
  "author": "Aly Assem",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "socket.io": "^4.4.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.14",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
